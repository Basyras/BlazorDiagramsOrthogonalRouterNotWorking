@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Models
<node>
    @if (Node.ShowsTitle)
    {
        <title>
            @Node.Title
        </title>
    }
    <border>
        <contentText>
            Shows title:
        </contentText>
        <InputCheckbox @bind-Value="Node.ShowsTitle" />

        <ports>
            @foreach (var port in Node.Ports)
            {
                <PortRenderer @key="port" Port="port" />
            }
        </ports>
    </border>
</node>

@code {
    [Parameter] public CustomNodeModel Node { get; set; } = null!;
}